[core]
    autocrlf = input
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim
    excludesfile=~/.gitignore
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = decorations
    line-numbers = true
    side-by-side = false
    whitespace-error-style = 22 reverse
    syntax-theme = zenburn

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
    hunk-header-decoration-style = cyan box ul
    line-numbers-left-style = cyan
    line-numbers-right-style = cyan

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    header = white
    untracked = cyan

[alias]
    a = add
    s = status
    ss = status -sb
    ci = commit
    cian = commit -a --amend --no-edit
    fere = !git fetch && git rebase origin/master --committer-date-is-author-date
    b = branch
    co = checkout
    df = diff
    dfs = !git -c core.pager=\"delta -s\" diff
    dw = diff --word-diff
    l  = log --decorate=full
    lsu = log --no-merges --date-order --pretty=format:'%C(cyan)%h%Creset %aD -%C(yellow) %s %Creset(%cn)'
    ld = log -p
    lw = log -p --word-diff
    lg = log --graph --decorate --pretty=oneline --abbrev-commit
    lga = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lgb = log --graph --decorate --pretty=oneline --abbrev-commit --branches
    aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
    sw = switch
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
